    "rimraf": "2.6.2",
    "ts-jest": "23.10.0",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.15.0",
    "typescript": "3.0.3"
  },
  "dependencies": {
    "@types/js-yaml": "3.11.2",
